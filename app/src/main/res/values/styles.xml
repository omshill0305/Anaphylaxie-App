<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/profile</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/emergency</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BirthdayPickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/BirthdayPicker</item>
    </style>

    <style name="BirthdayPicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/profile</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/reaction</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="MyAlertDialogStyle2" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/profile</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/emergency</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="MyAlertDialogStyleInfo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/profile</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/design_default_color_primary</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
