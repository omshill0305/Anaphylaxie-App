<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DizzinessActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:paddingRight="90dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.example.olga.aa_app.BaseView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:base_color="@color/reaction"
            app:icon="@drawable/headache"
            app:layout_constraintBottom_toTopOf="@id/choose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            app:title="@string/dizziness">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:scrollbarStyle="insideOverlay">

                <TableLayout
                    android:id="@+id/listing_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clipToPadding="false"
                    android:contextClickable="true"
                    android:isScrollContainer="true"
                    android:keepScreenOn="true"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:overScrollMode="always"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:verticalScrollbarPosition="right">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:background="@drawable/option_box"
                        android:backgroundTint="@color/reaction"
                        android:backgroundTintMode="add"
                        android:gravity="center"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@drawable/circle_checkbox_checked"
                            android:checked="false"
                            android:drawablePadding="@dimen/default_margin"
                            android:gravity="center"
                            android:text="@string/diarrhea"
                            android:textAlignment="center"
                            android:textSize="@dimen/paragraph" />

                        <ImageButton
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorProjektLightGreen"
                            android:contentDescription="@string/information"
                            android:padding="@dimen/default_margin"
                            android:tag="info"
                            app:srcCompat="@drawable/ic_info" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:background="@drawable/option_box"
                        android:backgroundTint="@color/reaction"
                        android:backgroundTintMode="add"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@drawable/circle_checkbox_checked"
                            android:drawablePadding="@dimen/default_margin"
                            android:text="@string/abdominal_pain"
                            android:textAlignment="center"
                            android:textSize="@dimen/paragraph" />

                        <ImageButton
                            android:id="@+id/imageButton4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorProjektLightGreen"
                            android:contentDescription="@string/information"
                            android:padding="@dimen/default_margin"
                            app:srcCompat="@drawable/ic_info" />
                    </TableRow>

                </TableLayout>
            </ScrollView>
        </com.example.olga.aa_app.BaseView>

        <Button
            android:id="@+id/choose"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:background="@color/reaction"
            android:padding="@dimen/default_margin"
            android:text="@string/select"
            android:textSize="@dimen/paragraph"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>