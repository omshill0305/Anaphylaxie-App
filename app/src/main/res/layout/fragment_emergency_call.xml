<?xml version="1.0" encoding="utf-8"?>
<com.example.olga.aa_app.BaseView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:base_color="@color/colorAccent"
    app:icon="@drawable/ic_notruf_red_24dp"
    app:tint="@color/white"
    app:title="@string/title_emergency_call"
    tools:context=".EmergencyCallFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingBottom="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:background="@drawable/border_box"
                android:backgroundTint="@color/colorAccent"
                android:backgroundTintMode="add"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/info_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="1. Von einem sicheren Ort aus anrufen"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/header" />

                <TextView
                    android:id="@+id/info_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Ruhe bewahren"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/header" />

                <TextView
                    android:id="@+id/info_text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Autoinjektor bereithalten"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/header" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:background="@drawable/border_box"
                android:backgroundTint="@color/colorAccent"
                android:backgroundTintMode="add"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_emergancy_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="?attr/colorBackgroundFloating"
                    android:clickable="true"
                    android:contentDescription="Emergency Call Button"
                    android:contextClickable="false"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WELCHE "
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infotext_which"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symptome?"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIE "
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infotext_how_many"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="viele sind betroffen?"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WAS "
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infotext_what"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="für eine Reaktion?"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WO "
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infotext_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ist es passiert?"
                        android:textColor="?attr/colorAccent"
                        android:textSize="@dimen/header" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WARTEN "
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infotext_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="auf Rückfragen!"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/header" />


                </LinearLayout>

            </LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="180dp" />

        </LinearLayout>
    </ScrollView>
</com.example.olga.aa_app.BaseView>
